<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cc.zkteam.zkinfocollectpro.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <cc.zkteam.zkinfocollectpro.view.ZKTitleView
                android:id="@+id/zk_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/test_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zk_title_view"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text=" 获取 ZKFiled 结果的按钮"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="下面是通过接口生成的界面哦"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/zk_root_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"/>
                </ScrollView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="150dp"/>









                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="100dp"/>









                <cc.zkteam.zkinfocollectpro.view.kind.ZKModuleLayout
                    android:id="@+id/zk_test_module_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>






                <cc.zkteam.zkinfocollectpro.view.kind.ZKFormLayout
                    android:id="@+id/zk_test_form_layout"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>




                <cc.zkteam.zkinfocollectpro.view.kind.ZKKeyValueLayout
                    android:id="@+id/zk_test_value_layout"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>



                <cc.zkteam.zkinfocollectpro.view.kind.ZKKeyValueFiledView
                    android:id="@+id/zk_test_key_value_view"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>



                <cc.zkteam.zkinfocollectpro.view.kind.ZKKindTitle
                    android:id="@+id/zk_test_title_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <cc.zkteam.zkinfocollectpro.view.kind.ZKFiled
                    android:id="@+id/zk_test_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>













                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_marginBottom="100dp"/>

                <cc.zkteam.zkinfocollectpro.view.kind.ZKKindTitle
                    android:id="@+id/zk_kind_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent" />

                <cc.zkteam.zkinfocollectpro.view.kind.ZKKeyValueFiledView
                    android:id="@+id/filed_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent" />

                <cc.zkteam.zkinfocollectpro.view.kind.ZKKeyValueLayout
                    android:id="@+id/filed_layout_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent" />


                <cc.zkteam.zkinfocollectpro.view.kind.ZKFiled
                    android:id="@+id/eidt_filed_layout_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent" />

                <cc.zkteam.zkinfocollectpro.view.kind.ZKFormLayout
                    android:id="@+id/edit_form_filed_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <include
                layout="@layout/activity_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/test_layout" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

