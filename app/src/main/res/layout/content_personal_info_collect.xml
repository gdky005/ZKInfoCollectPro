<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cc.zkteam.zkinfocollectpro.view.ZKImageView
            android:id="@+id/img_personal_avatar"
            android:layout_width="79dp"
            android:layout_height="118dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal_info_collect_name"
                style="@style/TvPersonalInfo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="姓名：张三"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_personal_info_collect_id"
                style="@style/TvPersonalInfo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="身份证号:13013111111111" />

            <TextView
                android:id="@+id/tv_personal_info_collect_project"
                style="@style/TvPersonalInfo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="性别：女  民族：汉" />

            <TextView
                android:id="@+id/tv_personal_info_collect_completed"
                style="@style/TvPersonalInfo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="采集项：31类  655项" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_personal_info_collect_completion"
                    style="@style/TvPersonalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="采集状态：未采集" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="21dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_change_collect_state"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp">

                    <ImageView
                        android:id="@+id/img_change_left"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_left_light" />

                    <TextView
                        android:id="@+id/btn_modification_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="状态修改"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/img_change_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_right" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_test_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="跳转到 Item 详情页面" />

    <cc.zkteam.zkinfocollectpro.view.ZKRecyclerView
        android:id="@+id/list_personal_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:background="#ffffff"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_personal_info"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_personal_info_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_personal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_personal_info_item_title"
                            style="@style/TvPersonalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人基本数据  19项" />

                        <TextView
                            android:id="@+id/tv_personal_info_item_completion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#cc333333"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:text="已完成 80% 8项" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_personal_info_item_edit_base"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_edit" />

                        <cc.zkteam.zkinfocollectpro.view.SimpleCircleProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@+id/img_personal_info_item_edit"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_personal_info"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_personal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvPersonalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特殊人员  19项" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#cc333333"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:text="已完成 80% 8项" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_personal_info_item_edit_special"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_edit" />

                        <cc.zkteam.zkinfocollectpro.view.SimpleCircleProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@+id/img_personal_info_item_edit"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_personal_info"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_personal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvPersonalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="婚姻信息  19项" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#cc333333"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:text="已完成 80% 8项" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_personal_info_item_marriage"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_edit" />

                        <cc.zkteam.zkinfocollectpro.view.SimpleCircleProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@+id/img_personal_info_item_edit"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_personal_info"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_personal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvPersonalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="户籍信息  19项" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#cc333333"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:text="已完成 80% 8项" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_personal_info_item_members"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_edit" />

                        <cc.zkteam.zkinfocollectpro.view.SimpleCircleProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@+id/img_personal_info_item_edit"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_personal_info"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_personal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvPersonalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人员基本信息  19项" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#cc333333"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:text="已完成 80% 8项" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_personal_info_item_relation"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_edit" />

                        <cc.zkteam.zkinfocollectpro.view.SimpleCircleProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="30dp"
                            android:layout_toLeftOf="@+id/img_personal_info_item_edit"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <include layout="@layout/item_personal_info" />

            <include layout="@layout/item_personal_info" />

            <include layout="@layout/item_personal_info" />

            <include layout="@layout/item_personal_info" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>