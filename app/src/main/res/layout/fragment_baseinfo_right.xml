<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basicinfo_rightviewback"
    tools:context="cc.zkteam.zkinfocollectpro.fragment.BaseinfoRightFragment">

            <RelativeLayout
                android:id="@+id/titleview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/basicinfo_rightviewtitle">

                <ImageView
                    android:id="@+id/titleimage"
                    android:padding="15dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:src="@mipmap/right_menu" />

                <TextView
                    android:id="@+id/titletextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/titleimage"
                    android:text="数据采集项"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titleview"
                android:visibility="visible">
            </android.support.v7.widget.RecyclerView>


</RelativeLayout>
