<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cc.zkteam.zkinfocollectpro.fragment.BasicinfoFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_30">

        <LinearLayout
            android:id="@+id/new_31_root_view_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <Button
            android:id="@+id/new_31_commit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:paddingRight="@dimen/dp_60"
            android:paddingLeft="@dimen/dp_60"
            android:background="@drawable/basicinfo_btn_commit"
            android:text="@string/new_31_commit_text"
            android:textColor="@color/white"/>
    </LinearLayout>


</ScrollView>
