<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cc.zkteam.zkinfocollectpro.view.ZKTitleView
        android:id="@+id/title_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_count"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edit_reset_pwd"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="某某人的账号"
        android:textColorHint="#666666"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/et_pwd_old"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edit_reset_pwd"
        android:drawableLeft="@drawable/icon_pwd"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="请输入原密码"
        android:textColorHint="#666666"
        android:inputType="textPassword"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edit_reset_pwd"
        android:drawableLeft="@drawable/icon_pwd"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:textColorHint="#666666"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_pwd_new_agin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edit_reset_pwd"
        android:drawableLeft="@drawable/icon_pwd"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="请再次输入新密码"
        android:textColorHint="#666666"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_reset_pwd"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_reset_pwd"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>