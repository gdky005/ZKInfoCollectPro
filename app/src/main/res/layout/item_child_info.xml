<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="姓名"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_child_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="性别"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_select_child_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/basicinfo_input_back"
            android:drawableEnd="@mipmap/right_arrow"
            android:drawableLeft="@mipmap/left_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/right_arrow"
            android:drawableStart="@mipmap/left_arrow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/black_333"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="某某单位" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="出生日期"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_select_child_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="5"
            android:background="@drawable/basicinfo_input_back"
            android:drawableEnd="@mipmap/data_icon"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/data_icon"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="2017年12月25日" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="出生证号"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_child_birth_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="出生医院"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_child_birth_hospital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="政策内外"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_select_policy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/basicinfo_input_back"
            android:drawableEnd="@mipmap/right_arrow"
            android:drawableLeft="@mipmap/left_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/right_arrow"
            android:drawableStart="@mipmap/left_arrow"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/black_333"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="某某单位" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="健康状况"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_child_health_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="联系电话"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_child_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_hint"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="操作"
            android:textColor="@color/text_main"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:background="@drawable/bg_btn_commit"
                android:text="编辑"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_btn_commit"
                android:text="删除"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/item_decor" />

</LinearLayout>