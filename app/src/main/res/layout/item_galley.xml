<?xml version="1.0" encoding="utf-8"?>
<cc.zkteam.zkinfocollectpro.view.gallery.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:tools="http://schemas.android.com/tools"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:layout_margin="1dp"
                                                            android:background="@color/white">

    <cc.zkteam.zkinfocollectpro.view.ZKImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_alpha_192"/>

    <!-- 选中图片后的遮罩 -->
    <View
        android:id="@+id/vi_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_112"
        android:visibility="gone"
        tools:visibility="visible"/>

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:layout_margin="2dp"
        android:button="@drawable/sel_cb_circle"
        android:buttonTint="@color/cb_gallery"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:padding="0dp"
        tools:visibility="visible"/>

</cc.zkteam.zkinfocollectpro.view.gallery.SquareLayout>