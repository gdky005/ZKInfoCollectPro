<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_layout_two_time_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp">

    <TextView
        android:id="@+id/right_layout_two_time_left_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_layout_two_time_center_text"
        android:background="@drawable/basicinfo_input_back"
        android:drawableRight="@mipmap/data_icon"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="时间1"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/right_layout_two_time_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_10"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/sp_15"
        android:text="至" />

    <TextView
        android:id="@+id/right_layout_two_time_right_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/right_layout_two_time_center_text"
        android:background="@drawable/basicinfo_input_back"
        android:drawableRight="@mipmap/data_icon"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="时间2"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>