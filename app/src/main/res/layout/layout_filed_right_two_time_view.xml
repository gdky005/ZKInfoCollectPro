<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/right_layout_two_time_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/right_layout_two_time_left_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/right_layout_two_time_center_text"
                android:background="@drawable/basicinfo_input_back"
                android:drawableRight="@mipmap/data_icon"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/sp_15"
                tools:text="时间1"/>

            <TextView
                android:id="@+id/right_layout_two_time_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_10"
                android:text="@string/zk_filed_time_center_text"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/sp_15"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/right_layout_two_time_right_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/right_layout_two_time_center_text_down"
                android:background="@drawable/basicinfo_input_back"
                android:drawableRight="@mipmap/data_icon"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/sp_15"
                tools:text="时间2"/>

            <TextView
                android:id="@+id/right_layout_two_time_center_text_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_10"
                android:text="@string/zk_filed_time_center_text"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/sp_15"
                android:visibility="invisible"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>