<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_slide_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_main_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_avatar">

            <cc.zkteam.zkinfocollectpro.view.ZKImageView
                android:id="@+id/img_about_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:roundAsCircle="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="某某名字"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_about_message"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/icon_message"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center_vertical"
        android:text="我的消息"
        android:textColor="#333333"
        android:textSize="15sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#d8edf6" />

    <TextView
        android:id="@+id/tv_question_upload"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/icon_message"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center_vertical"
        android:text="我的问题上报"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#d8edf6" />

    <TextView
        android:id="@+id/tv_about_setting"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/icon_set"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center_vertical"
        android:text="设置"
        android:textColor="#333333"
        android:textSize="15sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#d8edf6" />

    <TextView
        android:id="@+id/tv_about_quit"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/icon_quit"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center_vertical"
        android:text="退出"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#d8edf6" />


</LinearLayout>